<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  
  <servlet>
    <servlet-name>EditSubtitle</servlet-name>
    <servlet-class>com.subtitle.servlets.EditSubtitle</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditSubtitle</servlet-name>
    <url-pattern>/edit</url-pattern>
  </servlet-mapping>
  
  
   <servlet>
    <servlet-name>Upload</servlet-name>
    <servlet-class>com.subtitle.servlets.Upload</servlet-class>
  	<multipart-config>
  		<location>C:/Users/Administrateur/Desktop/SubtitleUltimate/SubtitleUltimate/WebContent/WEB-INF</location> <!-- Stockage temporaire -->
  		<max-file-size>10485760</max-file-size>
  		<max-request-size>52428800</max-request-size>
  		<file-size-threshold>1048576</file-size-threshold>
  	</multipart-config>
  </servlet>
  <servlet-mapping>
    <servlet-name>Upload</servlet-name>
    <url-pattern>/upload</url-pattern>
  </servlet-mapping>
  
  
  <jsp-config>
  		<jsp-property-group>
  			<url-pattern>*.jsp</url-pattern>
  			<include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
  		</jsp-property-group>
  </jsp-config>
  
</web-app>